{
  "manifest_version": 3,
  "name": "WIT-Calendar",
  "version": "1.0.0",
  "description": "A Chrome extension to import WIT classes into your calendar!",
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/init.js"]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": [
    "sidePanel",
    "scripting",
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "identity",
    "identity.email"
  ],
  "icons": {
    "128": "icon128.png"
  },
  "host_permissions": [
    "https://selfservice.wit.edu/*",
    "https://*.witcc.dev/*",
    "https://heron-selected-literally.ngrok-free.app/*"
  ]
}
